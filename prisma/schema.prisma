// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  email String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserPlan {
  id String @id @default(cuid())
  userId String
  plan Plan
}

enum Plan {
  FREE
  PRO
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String?
  section     Section
  videoUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isProOnly Boolean @default(false)

  codebases   Codebase[]
  
  @@map("projects")
}

model Codebase {
  id        String   @id @default(cuid())
  name      String
  url       String?
  code      String?
  projectId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@map("codebases")
}

model RequestedApp {
  id          String   @id @default(cuid())
  appName     String
  description String
  email       String
  status      RequestStatus @default(PENDING)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("requested_apps")
}

enum Section {
  SCREENS
  ANIMATION
}

enum RequestStatus {
  PENDING
  IN_REVIEW
  APPROVED
  REJECTED
  COMPLETED
}
